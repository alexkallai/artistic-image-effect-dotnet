<Window x:Class="Dotnet8ThreeColumnViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Three-column Image Viewer" Height="720" Width="1200"
        AllowDrop="True"
        Drop="Window_Drop"
        Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- menu -->
            <RowDefinition Height="Auto"/>
            <!-- global controls (tabbed) -->
            <RowDefinition Height="*"/>
            <!-- image columns -->
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Click="OpenMenu_Click"/>
            </MenuItem>
        </Menu>

        <!-- Global Controls (Tabbed) -->
        <Border Grid.Row="1" BorderBrush="#CCC" BorderThickness="0,0,0,1" Padding="10" Height="200">
            <TabControl x:Name="GlobalControlTabs" Margin="0" SelectionChanged="GlobalControlTabs_SelectedIntecChanged">

                <!-- TAB 1: original layout (horizontal) -->
                <TabItem Header="Concentric circles">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <StackPanel Orientation="Horizontal" >

                            <StackPanel Orientation="Vertical" >
                                <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Concentric circles center x: " />
                                <xctk:SingleUpDown Name="ConcIntX" Width="100" Value="100"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Concentric circles center y: " />
                                <xctk:SingleUpDown Name="ConcIntY" Width="100" Value="0"/>
                            </StackPanel>

                            



                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Concentric circles total number: " />
                                <xctk:SingleUpDown Name="ConcIntNum" Width="100" Value="10"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Concentric circles increment: " />
                                <xctk:SingleUpDown Name="ConcIntInc" Width="100" Value="10"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Concentric circles line width: " />
                                <xctk:SingleUpDown Name="ConcIntLineWidth" Width="100" Value="2"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Concentric circles line variable max width: " />
                                <xctk:SingleUpDown Name="ConcIntCircleSize" Width="100" Value="20"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Concentric average distance: " />
                                    <xctk:SingleUpDown Name="ConcIntBrightnessAverageDistance" Width="100" Value="20"/>
                            </StackPanel>
                            </StackPanel>
                            
                            <StackPanel Orientation="Vertical" >


                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Foreground color: " Margin="0,0,0,4"/>
                                    <xctk:ColorPicker x:Name="GlobalColor1" Width="140" SelectedColor="Black"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Background color: " Margin="0,0,0,4"/>
                                    <xctk:ColorPicker x:Name="GlobalColor2" Width="140" SelectedColor="DarkSeaGreen"/>
                            </StackPanel>
                                
                                
                            </StackPanel>

                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- TAB 2: vertical, compact layout -->
                <TabItem Header="Preset B">
                    <StackPanel Orientation="Vertical" >

                        <StackPanel>
                            <TextBlock Text="Dropdown selection" Margin="0,0,0,4"/>
                            <ComboBox Width="200">
                                <ComboBoxItem>Choice 1</ComboBoxItem>
                                <ComboBoxItem>Choice 2</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Intensity" Margin="0,0,0,4"/>
                            <Slider Width="200" Minimum="0" Maximum="100"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" >
                            <StackPanel>
                                <TextBlock Text="Color A" Margin="0,0,0,4"/>
                                <xctk:ColorPicker Width="120"/>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Color B" Margin="0,0,0,4"/>
                                <xctk:ColorPicker Width="120"/>
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>
                </TabItem>

                <!-- TAB 3: grid layout -->
                <TabItem Header="Preset C">
                    <Grid Margin="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0" Grid.Row="0">
                            <TextBlock Text="Dropdown" Margin="0,0,0,4"/>
                            <ComboBox Width="180">
                                <ComboBoxItem>One</ComboBoxItem>
                                <ComboBoxItem>Two</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="0">
                            <TextBlock Text="Slider" Margin="0,0,0,4"/>
                            <Slider Width="180" Minimum="0" Maximum="100"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Grid.Row="0">
                            <TextBlock Text="Integer" Margin="0,0,0,4"/>
                            <TextBox Width="100"/>
                        </StackPanel>

                        <StackPanel Grid.Column="0" Grid.Row="1">
                            <TextBlock Text="Color 1" Margin="0,0,0,4"/>
                            <xctk:ColorPicker Width="160"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="1">
                            <TextBlock Text="Color 2" Margin="0,0,0,4"/>
                            <xctk:ColorPicker Width="160"/>
                        </StackPanel>

                    </Grid>
                </TabItem>

            </TabControl>
        </Border>

        <!-- Columns -->
        <Grid Grid.Row="2" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Column 0 -->
            <Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="1" Margin="6" CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Viewbox Grid.Row="0" Stretch="Uniform">
                        <Image x:Name="Image0" Stretch="Uniform"/>
                    </Viewbox>

                    <StackPanel Grid.Row="1" Orientation="Horizontal"
                                HorizontalAlignment="Right" Margin="10">
                        <Button Content="Save PNG" Click="SaveImage_Click"
                                Tag="0" Padding="8,4"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Column 1 -->
            <Border Grid.Column="1" BorderBrush="#DDD" BorderThickness="1" Margin="6" CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Viewbox Grid.Row="0" Stretch="Uniform">
                        <Image x:Name="Image1" Stretch="Uniform"/>
                    </Viewbox>

                    <StackPanel Grid.Row="1" Orientation="Horizontal"
                                HorizontalAlignment="Right" Margin="10">
                        <Button Content="Save PNG" Click="SaveImage_Click"
                                Tag="1" Padding="8,4"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Column 2 -->
            <Border Grid.Column="2" BorderBrush="#DDD" BorderThickness="1" Margin="6" CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Viewbox Grid.Row="0" Stretch="Uniform">
                        <Image x:Name="Image2" Stretch="Uniform"/>
                    </Viewbox>

                    <StackPanel Grid.Row="1" Orientation="Horizontal"
                                HorizontalAlignment="Right" Margin="10">
                        <Button Content="Save PNG" Click="SaveImage_Click"
                                Tag="2" Padding="8,4"/>
                    </StackPanel>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</Window>
