<Window x:Class="Dotnet8ThreeColumnViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Three-column Image Viewer" Height="720" Width="1200"
        AllowDrop="True"
        Drop="Window_Drop"
        Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- menu -->
            <RowDefinition Height="Auto"/>
            <!-- global controls (tabbed) -->
            <RowDefinition Height="Auto"/>
            <!-- color pickers + render button -->
            <RowDefinition Height="*"/>
            <!-- image columns -->
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Open..." Click="OpenMenu_Click"/>
            </MenuItem>
        </Menu>

        <!-- Global Controls (Tabbed) -->
        <Border Grid.Row="1" BorderBrush="#CCC" BorderThickness="0,0,0,1" Padding="5" Height="200">
            <TabControl x:Name="GlobalControlTabs" Height="179" VerticalAlignment="Top">

                <!-- TAB 1: original layout (horizontal) -->
                <TabItem Header="Concentric circles">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="110"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Row 0 -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Circles center X:" VerticalAlignment="Center" Margin="0,2"/>
                            <xctk:SingleUpDown Grid.Row="0" Grid.Column="1" Name="ConcIntX" Width="100" Value="100" Margin="0,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="Circles center Y:" VerticalAlignment="Center" Margin="0,2"/>
                            <xctk:SingleUpDown Grid.Row="0" Grid.Column="4" Name="ConcIntY" Width="100" Value="0" Margin="0,2"/>

                            <!-- Row 1 -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Total number of circles:" VerticalAlignment="Center" Margin="0,2"/>
                            <xctk:SingleUpDown Grid.Row="1" Grid.Column="1" Name="ConcIntNum" Width="100" Value="10" Margin="0,2"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" Text="Increment:" VerticalAlignment="Center" Margin="0,2"/>
                            <xctk:SingleUpDown Grid.Row="1" Grid.Column="4" Name="ConcIntInc" Width="100" Value="10" Margin="0,2"/>

                            <!-- Row 2 -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Pattern line width:" VerticalAlignment="Center" Margin="0,2"/>
                            <xctk:SingleUpDown Grid.Row="2" Grid.Column="1" Name="ConcIntLineWidth" Width="100" Value="2" Margin="0,2"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" Text="Variable line max width:" VerticalAlignment="Center" Margin="0,2"/>
                            <xctk:SingleUpDown Grid.Row="2" Grid.Column="4" Name="ConcIntCircleSize" Width="100" Value="20" Margin="0,2"/>

                            <!-- Row 3 -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Brightness averaging distance:" VerticalAlignment="Center" Margin="0,2"/>
                            <xctk:SingleUpDown Grid.Row="3" Grid.Column="1" Name="ConcIntBrightnessAverageDistance" Width="100" Value="20" Margin="0,2"/>

                            <!-- Row 4 (available for future controls) -->

                        </Grid>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Phyllotaxis spiral">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="110"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Row 0 -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Spiral center X:" VerticalAlignment="Center" Margin="0,2"/>
                            <xctk:SingleUpDown Grid.Row="0" Grid.Column="1" Name="PhyIntX" Width="100" Value="100" Margin="0,2"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="Spiral center Y:" VerticalAlignment="Center" Margin="0,2"/>
                            <xctk:SingleUpDown Grid.Row="0" Grid.Column="4" Name="PhyIntY" Width="100" Value="0" Margin="0,2"/>

                            <!-- Row 1 -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Total number of points:" VerticalAlignment="Center" Margin="0,2"/>
                            <xctk:SingleUpDown Grid.Row="1" Grid.Column="1" Name="PhyIntNum" Width="100" Value="300" Margin="0,2"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" Text="Radial increment:" VerticalAlignment="Center" Margin="0,2"/>
                            <xctk:SingleUpDown Grid.Row="1" Grid.Column="4" Name="PhyIntInc" Width="100" Value="6" Margin="0,2"/>

                            <!-- Row 2 -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Point radius:" VerticalAlignment="Center" Margin="0,2"/>
                            <xctk:SingleUpDown Grid.Row="2" Grid.Column="1" Name="PhyIntLineWidth" Width="100" Value="2" Margin="0,2"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" Text="Variable size max:" VerticalAlignment="Center" Margin="0,2"/>
                            <xctk:SingleUpDown Grid.Row="2" Grid.Column="4" Name="PhyIntCircleSize" Width="100" Value="20" Margin="0,2"/>

                            <!-- Row 3 -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Brightness averaging distance:" VerticalAlignment="Center" Margin="0,2"/>
                            <xctk:SingleUpDown Grid.Row="3" Grid.Column="1" Name="PhyIntBrightnessAverageDistance" Width="100" Value="20" Margin="0,2"/>

                        </Grid>
                    </ScrollViewer>
                </TabItem>

                <!-- TAB 2: vertical, compact layout -->
                <TabItem Header="Preset B">
                    <StackPanel Orientation="Vertical">
                        <StackPanel>
                            <TextBlock Text="Dropdown selection" Margin="0,0,0,4"/>
                            <ComboBox Width="200">
                                <ComboBoxItem>Choice 1</ComboBoxItem>
                                <ComboBoxItem>Choice 2</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Intensity" Margin="0,0,0,4"/>
                            <Slider Width="200" Minimum="0" Maximum="100"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel>
                                <TextBlock Text="Color A" Margin="0,0,0,4"/>
                                <xctk:ColorPicker Width="120"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Color B" Margin="0,0,0,4"/>
                                <xctk:ColorPicker Width="120"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </TabItem>

                <!-- TAB 3: grid layout -->
                <TabItem Header="Preset C">
                    <Grid Margin="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0" Grid.Row="0">
                            <TextBlock Text="Dropdown" Margin="0,0,0,4"/>
                            <ComboBox Width="180">
                                <ComboBoxItem>One</ComboBoxItem>
                                <ComboBoxItem>Two</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="0">
                            <TextBlock Text="Slider" Margin="0,0,0,4"/>
                            <Slider Width="180" Minimum="0" Maximum="100"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Grid.Row="0">
                            <TextBlock Text="Integer" Margin="0,0,0,4"/>
                            <TextBox Width="100"/>
                        </StackPanel>
                        <StackPanel Grid.Column="0" Grid.Row="1">
                            <TextBlock Text="Color 1" Margin="0,0,0,4"/>
                            <xctk:ColorPicker Width="160"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="1">
                            <TextBlock Text="Color 2" Margin="0,0,0,4"/>
                            <xctk:ColorPicker Width="160"/>
                        </StackPanel>
                    </Grid>
                </TabItem>

            </TabControl>
        </Border>

        <!-- Global Color Pickers and Render Button (outside tabs) -->
        <Border Grid.Row="2" BorderBrush="#CCC" BorderThickness="0,0,0,1" Padding="5" Background="#F5F5F5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">

                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Foreground color: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <xctk:ColorPicker x:Name="GlobalColor1" Width="140" SelectedColor="Black"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Background color: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <xctk:ColorPicker x:Name="GlobalColor2" Width="140" SelectedColor="DarkSeaGreen"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Target megapixels: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <xctk:SingleUpDown x:Name="TargetMegapixels" Width="80" Value="2" Minimum="0.001" Maximum="300" Increment="0.5"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                    <CheckBox x:Name="EnableBlurCheckbox" Content="Enable blur" VerticalAlignment="Center"/>
                </StackPanel>

                <Button Content="RENDER" Click="RenderButtonClick" Padding="20,8" FontWeight="Bold"/>

            </StackPanel>
        </Border>

        <!-- Image Columns -->
        <Grid Grid.Row="3" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Column 0 -->
            <Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="1" Margin="3" CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Viewbox Grid.Row="0" Stretch="Uniform">
                        <Image x:Name="Image0" Stretch="Uniform" MouseLeftButtonDown="Image_Click" Cursor="Hand"/>
                    </Viewbox>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button Content="Save PNG" Click="SaveImage_Click" Tag="0" Padding="8,4"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Column 1 -->
            <Border Grid.Column="1" BorderBrush="#DDD" BorderThickness="1" Margin="3" CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Viewbox Grid.Row="0" Stretch="Uniform">
                        <Image x:Name="Image1" Stretch="Uniform" MouseLeftButtonDown="Image_Click" Cursor="Hand"/>
                    </Viewbox>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button Content="Save PNG" Click="SaveImage_Click" Tag="1" Padding="8,4"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Column 2 -->
            <Border Grid.Column="2" BorderBrush="#DDD" BorderThickness="1" Margin="3" CornerRadius="6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Viewbox Grid.Row="0" Stretch="Uniform">
                        <Image x:Name="Image2" Stretch="Uniform" MouseLeftButtonDown="Image_Click" Cursor="Hand"/>
                    </Viewbox>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button Content="Save PNG" Click="SaveImage_Click" Tag="2" Padding="8,4"/>
                    </StackPanel>
                </Grid>
            </Border>

        </Grid>

        <!-- Fullscreen Image Overlay -->
        <Grid x:Name="ImageOverlay" Grid.Row="0" Grid.RowSpan="4" 
              Background="#DD000000" Visibility="Collapsed"
              MouseLeftButtonDown="ImageOverlay_Click">
            <Image x:Name="OverlayImage" Stretch="Uniform" Margin="20"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="Click anywhere or press ESC to close" 
                       Foreground="White" FontSize="14"
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                       Margin="0,0,0,10" Opacity="0.7"/>
        </Grid>

    </Grid>
</Window>